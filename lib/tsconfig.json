{
  "compilerOptions": {
    "lib": ["es2015", "es6"],
    "target": "es5",
    "module": "commonjs",
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "../dist",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "declaration": true,
    "sourceMap": true,
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "../node_modules"
  ]
}